    <body>
        <div class="form-signin w-100 m-auto mt-5 pt-5">
            <h2>Ubah Kata Sandi</h2>
            <form  action="/proses-edit" method="POST">
                <div class="form-floating">
                    <input type="password" class="form-control" name="form_ password" placeholder="Password" required>
                    <label for="currentPassword">Current Password</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" name="form_Bpassword" placeholder="Password" required>
                    <label for="floatingPassword">New Password</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" name="form_Cpassword" placeholder="Password" required>
                    <label for="floatingPassword">Confirm New Password</label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Ubah Password</button>
            </form>
        </div>
    </body>

